.wq-aligned-header::before {
    content: "";
    position: absolute;
    left: 0;
    width: 6px;        /* 适中的厚度，不臃肿也不纤细 */
    height: 26px;      /* 比 20px 的文字高出一点，视觉比例最稳 */
    background: linear-gradient(180deg, #007aff 0%, #7dc2ff 100%);
    border-radius: 50px;
    box-shadow: 0 2px 6px rgba(0, 122, 255, 0.15);
}

/* 2. 精致渐变标题：与正文字号视觉一致 */
.wq-aligned-title {
    /* 锁定高质量黑体，不调用系统宋体 */
    font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
    /* 20px 是兼顾醒目与精致的黄金字号 */
    font-size: 20px;   
