    /* 文字渐变：从深石板色自然过渡到科技蓝 */
    background: linear-gradient(90deg, #2c3e50 0%, #007aff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
}

/* 深色模式适配 */
[data-theme='dark'] .wq-aligned-title,
.dark .wq-aligned-title {
    background: linear-gradient(90deg, #ffffff 0%, #7dc2ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

